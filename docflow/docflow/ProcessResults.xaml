<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="docflow.ProcessResults"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:docflow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="docflow">

    <Grid
     Background="#e9eef6">

        <ScrollViewer 
            VerticalScrollBarVisibility="Auto">
            
            <StackPanel
             HorizontalAlignment="Center"
             VerticalAlignment="Top"
             Background="#f8fafd"
             Width="800"
             Padding="60"
             Spacing="60"
             CornerRadius="24">

                <StackPanel
                 Spacing="25">

                    <TextBlock
                     Text="Processing results"
                     FontSize="30"
                     Foreground="Black" />


                    <Grid>
                        <ListView 
                            x:Name="ResultsListView" 
                            Margin="5">
                        
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel 
                                        Orientation="Horizontal"
                                        Margin="10"
                                        Spacing="15">
                                    
                                        <TextBlock 
                                            Text="{Binding Name}" 
                                            FontSize="24"
                                            Width="200"
                                            TextWrapping="Wrap"
                                            VerticalAlignment="Center" />
                              
                                        <TextBox 
                                            Text="{Binding Value}" 
                                            Width="400" 
                                            FontSize="24"
                                            TextWrapping="Wrap"
                                            VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>


                    <Button
                     x:Name="FinalizeButton"
                     Content="Finalize"
                     Click="OnFinalizeButton"
                     Background="#209cee"
                     Foreground="White"
                     FontSize="30"
                     Padding="35,25"
                     CornerRadius="14"
                     Grid.Column="1"
                     HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
