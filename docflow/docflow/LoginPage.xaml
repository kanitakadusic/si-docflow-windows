<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="docflow.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:docflow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Background="White">
        <!-- Background can be styled or replaced with ImageBrush -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Centered Login Panel -->
            <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,100,0,0"
                    Width="500"
                    Spacing="20">

                <TextBlock x:Name="DocflowText"
                       Text="docflow"
                       Margin="0,0,0,20"
                       FontSize="40"
                       Foreground="#209cee"
                       HorizontalAlignment="Center" />

                <TextBlock Text="Enter your name:"
                     FontSize="16"
                     Foreground="Black"
                       
                     Margin="0,10,0,0"/>

                <TextBox x:Name="UsernameTextBox"
                     PlaceholderText="Name"
                     Height="40"
                     FontSize="16"
                     BorderThickness="1"
                     BorderBrush="Gray"
                     Background="White"
                     CornerRadius="4" />


                <!--<PasswordBox x:Name="PasswordBox"
                         PlaceholderText="Password"
                         Height="40"
                         FontSize="16"
                         BorderThickness="1"
                         BorderBrush="Gray"
                         CornerRadius="4" />-->

                <!--<ListView x:Name="DocumentTypesList" SelectionMode="Single">

                <ListViewItem Content="Item 1"/>
                <ListViewItem Content="Item 2"/>
                <ListViewItem Content="Item 3"/>
                <ListViewItem Content="Item 4"/>

            </ListView>-->

                <TextBlock Text="Select the type of document you want to process:"
                FontSize="16"
                Foreground="Black"
                Margin="0,40,0,0"/>

                <ComboBox x:Name="DocumentTypesList"
              Height="40"
              FontSize="16"
              Width="500"
              BorderThickness="1"
              BorderBrush="Gray"
              Background="White"
              CornerRadius="4"
              PlaceholderText="Document type">

                    <ComboBoxItem Content="Item 1"/>
                    <ComboBoxItem Content="Item 2"/>
                    <ComboBoxItem Content="Item 3"/>
                    <ComboBoxItem Content="Item 4"/>

                </ComboBox>


                <Button Content="Continue"
                    Click="OnLoginClicked"
                    Height="40"
                    Background="#209cee"
                    Foreground="White"
                    Margin="0,40,0,0"
                    FontSize="16"
                    CornerRadius="4"
                    HorizontalAlignment="Stretch"
                    />


                <!--<TextBlock x:Name="forgotPasswordText"
                       Text="Forgotten your password?"   
                       Tapped="OnForgotPasswordClicked"
                       FontSize="14"
                       Foreground="DimGray"
                       HorizontalAlignment="Center"   
            />

            <TextBlock x:Name="signUpText"
                       Text="Don't have an account? Sign Up!"   
                       Tapped="OnSignUpClicked"
                       FontSize="14"
                       Foreground="DimGray"
                       HorizontalAlignment="Center"   
            />-->

            </StackPanel>
    </Grid>
</Window>