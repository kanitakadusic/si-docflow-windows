<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="docflow.ProcessWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:docflow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="docflow">

    <Grid
        Background="#e9eef6">
        
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#f8fafd"
            Width="800"
            Padding="60"
            Spacing="60"
            CornerRadius="24">
            
            <Button
                Click="SettingsButton_Click"
                Background="#E0E0E0"  
                Foreground="#606060"
                Width="80"
                Height="80"
                CornerRadius="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,0,-60">

                <FontIcon
                    Glyph="&#xE713;"
                    FontSize="35" />
            </Button>
            
            <StackPanel
                Spacing="25">

                <TextBlock
                    Text="Select a document:"
                    FontSize="30"
                    Foreground="Black"
                    Margin="20"/>

                <ComboBox
                    x:Name="DocumentsComboBox"
                    PlaceholderText="Selected document"
                    Padding="35,25"
                    FontSize="28"
                    HorizontalAlignment="Stretch"
                    Background="White"
                    CornerRadius="14" />
            </StackPanel>

            <ProgressRing 
                x:Name="LoadingRing" 
                IsActive="False" 
                Width="50" 
                Height="50" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Foreground="#209cee" 
                Visibility="Collapsed" />
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <Button
                    x:Name="OpenCameraButton"
                    Content="Scan"
                    Click="OnScanButton"
                    Background="#209cee"
                    Foreground="White"
                    FontSize="30"
                    Padding="35,25"
                    CornerRadius="14"
                    Grid.Column="0"
                    HorizontalAlignment="Left" />

                <Button
                    Content="Process"
                    Click="ProcessButton_Click"
                    Background="#209cee"
                    Foreground="White"
                    FontSize="30"
                    Padding="35,25"
                    CornerRadius="14"
                    Grid.Column="2"
                    HorizontalAlignment="Right" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
