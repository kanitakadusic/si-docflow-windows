<Window
    x:Class="docflow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:docflow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="docflow">

    <Grid
        Background="#e9eef6">

        <StackPanel
            VerticalAlignment="Center"
            Width="800"
            Spacing="40" >
            
            <StackPanel
                Background="#f8fafd"
                Padding="40"
                Spacing="20"
                CornerRadius="24">

                <TextBlock
                    Text="Select file extensions you want to be monitored:"
                    FontSize="16"
                    Foreground="Black" />

                <StackPanel
                    Orientation="Horizontal">

                    <CheckBox
                        x:Name="allCheckBox"
                        Content="All"
                        IsThreeState="True"
                        IsChecked="True"
                        Checked="AllChecked"
                        Unchecked="AllUnchecked"
                        Indeterminate="AllIndeterminate" />

                    <CheckBox
                        x:Name="pdfCheckBox"
                        Content=".pdf"
                        IsChecked="True"
                        Checked="OptionChecked"
                        Unchecked="OptionUnchecked" />

                    <CheckBox
                        x:Name="pngCheckBox"
                        Content=".png"
                        IsChecked="True"
                        Checked="OptionChecked"
                        Unchecked="OptionUnchecked" />

                    <CheckBox
                        x:Name="jpgCheckBox"
                        Content=".jpg"
                        IsChecked="True"
                        Checked="OptionChecked"
                        Unchecked="OptionUnchecked" />

                    <CheckBox
                        x:Name="jpegCheckBox"
                        Content=".jpeg"
                        IsChecked="True"
                        Checked="OptionChecked"
                        Unchecked="OptionUnchecked" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Background="#f8fafd"
                Padding="40"
                Spacing="20"
                CornerRadius="24">

                <StackPanel
                    Orientation="Horizontal"
                    Spacing="5">

                    <TextBlock
                        x:Name="FolderTextBlock"
                        Text="Folder:"
                        FontSize="16"
                        Foreground="Black" />

                    <HyperlinkButton
                        Click="OnPathHyperlinkButton"
                        FontSize="16"
                        Padding="5"
                        Margin="0,-5"
                        BorderThickness="0"
                        Background="Transparent">

                        <TextBlock
                            x:Name="PathTextBlock"
                            Text="Path"
                            TextDecorations="Underline"
                            Foreground="#209cee" />
                    </HyperlinkButton>
                </StackPanel>

                <ComboBox
                    x:Name="DocumentsComboBox"
                    PlaceholderText="Selected document"
                    Padding="25,15"
                    FontSize="16"
                    HorizontalAlignment="Stretch"
                    Background="White"
                    CornerRadius="12"/>
            </StackPanel>

            <StackPanel
                Background="#f8fafd"
                Padding="40"
                Spacing="20"
                CornerRadius="24">

                <TextBlock
                    x:Name="CameraTextBlock"
                    Text="Take a picture now:"
                    FontSize="16"
                    Foreground="Black" />

                <Button
                    x:Name="OpenCameraButton"
                    Content="Open camera"
                    Click="OnOpenCameraButton"
                    Background="#c2e7ff"
                    Foreground="Black"
                    FontSize="16"
                    Padding="25,15"
                    CornerRadius="14" />
            </StackPanel>

            <Button
                x:Name="SubmitButton"
                Content="Submit"
                Click="OnSubmitClickButton"
                Background="#209cee"
                Foreground="White"
                FontSize="16"
                HorizontalAlignment="Right"
                Padding="25,15"
                CornerRadius="14" />
        </StackPanel>
    </Grid>
</Window>
