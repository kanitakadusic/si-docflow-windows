    <Grid
        Background="#e9eef6">

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#f8fafd"
            Width="800"
            Padding="60"
            Spacing="60"
            CornerRadius="24">

            <StackPanel
                Spacing="25">

                <TextBlock
                    Text="Select a document:"
                    FontSize="30"
                    Foreground="Black"
                    Margin="20"/>

                <ComboBox
                    x:Name="DocumentsComboBox"
                    PlaceholderText="Selected document"
                    Padding="35,25"
                    FontSize="28"
                    HorizontalAlignment="Stretch"
                    Background="White"
                    CornerRadius="14" />
            </StackPanel>

            <ProgressRing 
                x:Name="LoadingRing" 
                IsActive="False" 
                Width="50" 
                Height="50" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Foreground="#209cee"/>

